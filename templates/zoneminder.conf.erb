# Managed by puppet

# Username and group that web daemon (httpd/apache) runs as
ZM_WEB_USER=<%= @run_user %>
ZM_WEB_GROUP=<%= @run_group %>

## Database settings
ZM_DB_HOST=<%= @dbserver %>

# ZoneMinder database name
ZM_DB_NAME=<%= @dbname %>

# ZoneMinder database user
ZM_DB_USER=<%= @dbuser %>

# ZoneMinder database password
ZM_DB_PASS=<%= @dbpass %>

